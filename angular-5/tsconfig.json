{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators" : true,
    "target": "es5",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "aot",
    "dist"
  ],
  "paths": {
    "*": ["*"]
  }
}